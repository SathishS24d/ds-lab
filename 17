import numpy as np

# Create two arrays
array1 = np.array([10, -10, 10, -10, -10, 10])
array2 = np.array([0.85, 0.45, 0.9, 0.8, 0.12, 0.6])

# Display the original arrays
print("Original arrays:")
print(array1)
print(array2)

# Count the number of instances of a value occurring in array1 based on the condition in array2
count_instances = np.sum((array1 == 10) & (array2 > 0.5))

# Display the result
print("\nNumber Of instances Of a value occurring in one array on the condition of another array:", count_instances)
